{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.1.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "(@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./devToolsClear.ps1) & (electron .)",
    "postinstall": "electron-builder install-app-deps",
    "dev": "webpack && webpack serve",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder",
    "release": "webpack && electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman",
      "publish": [
        {
          "provider": "github",
          "owner": "conmiz",
          "repo": "dndcs",
          "token": "9bea4e603df918281da6ce80caf484fe00e7f297"
        }
      ]
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-react": "^7.12.13",
    "@reduxjs/toolkit": "^1.5.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-import": "^1.13.3",
    "css-loader": "^5.1.1",
    "electron": "^11.1.1",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.1.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "html-webpack-plugin": "^5.3.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "redux-devtools": "^3.7.0",
    "redux-devtools-extension": "^2.13.9",
    "style-loader": "^2.0.0",
    "webpack": "^5.24.4",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "clsx": "^1.1.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-table": "^7.6.3",
    "redux": "^4.0.5",
    "sqlite3": "^5.0.2"
  }
}
