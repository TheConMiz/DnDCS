{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.0.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "electron . ",
    "postinstall": "electron-builder install-app-deps",
    "dev": "webpack && webpack-dev-server",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman"
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.13.0",
    "css-loader": "^3.4.0",
    "electron-builder": "^21.2.0",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^1.0.2",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.7.1",
    "clsx": "^1.0.4",
    "draft-js": "^0.11.3",
    "electron": "^7.1.6",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "fuse.js": "^3.4.6",
    "knex": "^0.20.4",
    "material-table": "^1.54.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-select": "^3.0.8",
    "redux": "^4.0.4",
    "sqlite3": "^4.1.1"
  }
}
