{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.0.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "electron . ",
    "postinstall": "electron-builder install-app-deps",
    "dev": "webpack && webpack-dev-server",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder",
    "release": "webpack && electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman",
      "publish": [
        {
          "provider": "github",
          "owner": "conmiz",
          "repo": "dndcs",
          "token": "9bea4e603df918281da6ce80caf484fe00e7f297"
        }
      ]
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.8.0",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/preset-env": "^7.8.2",
    "@babel/preset-react": "^7.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.13.0",
    "css-loader": "^3.4.2",
    "electron": "^7.1.8",
    "electron-builder": "^21.2.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.12.0",
    "style-loader": "^1.1.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.8.2",
    "clsx": "^1.0.4",
    "draft-js": "^0.11.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "knex": "^0.20.7",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-select": "^3.0.8",
    "redux": "^4.0.5",
    "sqlite3": "^4.1.1"
  }
}
