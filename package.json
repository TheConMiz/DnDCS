{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.0.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "(@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./devToolsClear.ps1) & (electron .)",
    "postinstall": "electron-builder install-app-deps",
    "dev": "webpack && webpack-dev-server",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder",
    "release": "webpack && electron-builder build --win --publish always"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman",
      "publish": [
        {
          "provider": "github",
          "owner": "conmiz",
          "repo": "dndcs",
          "token": "9bea4e603df918281da6ce80caf484fe00e7f297"
        }
      ]
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "babel-loader": "^8.2.2",
    "babel-plugin-import": "^1.13.3",
    "css-loader": "^5.0.1",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^4.5.0",
    "react": "^17.0.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.11.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "electron-devtools-installer": "^3.1.1",
    "lodash": "^4.17.20",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-select": "^3.1.1",
    "redux": "^4.0.5",
    "sqlite3": "^5.0.0"
  }
}
