{
  "name": "dndcs",
  "productName": "DnDCS",
  "version": "0.0.0",
  "description": "A Character sheet solution for Dungeons & Dragons, built using Electron, React and SQLite3",
  "main": "./public/electron-main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dev-start": "webpack && webpack-dev-server",
    "test-build": "webpack && electron-builder --dir",
    "dist": "webpack && electron-builder"
  },
  "build": {
    "appId": "com.electron.dndcs",
    "productName": "DnDCS",
    "asar": "true",
    "asarUnpack": [
      "public/data"
    ],
    "directories": {
      "app": "./",
      "buildResources": "./src"
    },
    "files": [
      "./public/electron-main.js",
      "./public/data/**/*",
      "!dist/win-unpacked/**/*",
      {
        "from": "dist/",
        "to": "public/",
        "filter": [
          "!dist/*.yaml"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Vishal Venkatraman"
    }
  },
  "nsis": {
    "oneClick": "false",
    "allowToChangeInstallationDirectory": "true"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheConMiz/dndcs.git"
  },
  "keywords": [
    "DnD"
  ],
  "author": "Vishal Venkatraman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheConMiz/dndcs/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-import": "^1.12.0",
    "css-loader": "^3.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.35.3",
    "webpack-cli": "^3.3.5",
    "webpack-dev-server": "^3.7.2"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.17.1",
    "@blueprintjs/select": "^3.9.0",
    "@material-ui/core": "^4.3.1",
    "@material-ui/icons": "^4.2.1",
    "clsx": "^1.0.4",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "evergreen-ui": "^4.18.1",
    "fuse.js": "^3.4.5",
    "knex": "^0.18.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "redux": "^4.0.2",
    "semantic-ui-react": "^0.87.3",
    "sqlite3": "^4.0.9"
  }
}
